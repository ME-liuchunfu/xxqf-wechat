<view class="container">
  <!-- 分组列表 -->
  <view class="group-list">
    <view wx:for="{{groups}}" wx:key="id" class="group-item">
      <view class="group-name">{{item.title}}</view>
      <view class="group-actions">
        <button 
          class="delete-btn" 
          bindtap="deleteGroup" 
          data-id="{{item.id}}"
        >
          删除
        </button>
        <button
        class="yao-btn"
          bindtap="showYaoqin" 
          data-id="{{item.id}}"
        >
          邀请
        </button>
      </view>
    </view>
    
    <!-- 空状态 -->
    <view wx:if="{{groups.length === 0}}" class="empty-state">
      暂无分组，点击新增按钮创建
    </view>
  </view>


  <view class="dialog-mask" wx:if="{{showYaoialog}}"></view>
  <view class="dialog" wx:if="{{showYaoialog}}">
    <view class="dialog-title">分享分组</view>
    <input 
      class="dialog-input" 
      placeholder="请输入用户id" 
      value="{{platId}}"
      bindinput="onPlatIdChange"
    />
    <view class="dialog-buttons">
      <button class="dialog-btn cancel" bindtap="hideGroupDialog">取消</button>
      <button class="dialog-btn confirm" bindtap="addGroupRef">确认</button>
    </view>
  </view>
  
  <view class="action-wrap">
    <view bindtap="showAddDialog" class="add-btn">+</view>
  </view>

  <!-- 新增分组弹窗 -->
  <view class="dialog-mask" wx:if="{{showDialog}}"></view>
  <view class="dialog" wx:if="{{showDialog}}">
    <view class="dialog-title">新增分组</view>
    <input 
      class="dialog-input" 
      placeholder="请输入分组名称" 
      value="{{newGroupName}}"
      bindinput="onGroupNameChange"
    />
    <view class="dialog-buttons">
      <button class="dialog-btn cancel" bindtap="hideAddDialog">取消</button>
      <button class="dialog-btn confirm" bindtap="addNewGroup">确认</button>
    </view>
  </view>
</view>
    