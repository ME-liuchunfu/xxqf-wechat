/* 登录页面样式 */
.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f7fa;
  position: relative;
}

/* 顶部装饰 */
.top-decoration {
  height: 240rpx;
  width: 100%;
  background: linear-gradient(135deg, #37c2ff, #007aff);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* Logo区域 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
  position: relative;
  z-index: 2;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 10rpx 30rpx rgba(0, 122, 255, 0.2);
  margin-bottom: 30rpx;
  background-color: white;
  padding: 10rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-desc {
  font-size: 26rpx;
  color: #666;
}

/* 登录表单区域 */
.login-form {
  width: 90%;
  margin: 80rpx auto 0;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 2;
}

/* 其他登录方式 */
.other-login-methods {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.divider {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
  position: relative;
}

.divider::before, .divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 80rpx;
  height: 1rpx;
  background-color: #eee;
}

.divider::before {
  left: -100rpx;
}

.divider::after {
  right: -100rpx;
}

.method-icons {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.method-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  height: auto;
  line-height: normal;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

.method-btn text {
  font-size: 24rpx;
  color: #666;
}

/* 登录按钮 */
.login-btn-container {
  width: 90%;
  margin: 60rpx auto;
  position: relative;
  z-index: 2;
}

.wechat-login-btn {
  width: 100%;
  height: 100rpx;
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5rpx 15rpx rgba(7, 193, 96, 0.3);
  border: none;
}

.wechat-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}

.login-btn-hover {
  background-color: #06b354;
}

/* 底部条款 */
.agreement {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin-top: auto;
  margin-bottom: 50rpx;
  position: relative;
  z-index: 2;
}

.agreement-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
}

.agreement-link {
  color: #007aff;
  text-decoration: none;
  margin: 0 5rpx;
}

/* 登录成功提示 */
.success-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  z-index: 100;
  animation: fadeInOut 2s;
}

@keyframes fadeInOut {
  0% { opacity: 0; }
  20% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; }
}
