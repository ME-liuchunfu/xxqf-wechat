/* 顶部用户信息 */
.user-header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-avatar-area {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 2rpx solid #f0f0f0;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 26rpx;
  color: #999;
}

/* 用户快捷操作 */
.user-actions {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.333%;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  position: relative;
}

.icon {
  font-size: 36rpx;
}

.badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  color: white;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

/* 功能菜单 */
.menu-list {
  padding: 0 30rpx;
}

.menu-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  height: 110rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 30rpx;
  color: #666;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录按钮 */
.logout-btn {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50rpx;
  border: 2rpx solid #e5e5e5;
  color: #666;
  font-size: 32rpx;
  margin: 60rpx auto 40rpx;
}

.logout-btn:active {
  background-color: #f5f5f5;
}

/* 点击反馈 */
.menu-item:active, .action-item:active, .user-avatar-area:active {
  background-color: rgba(0, 0, 0, 0.02);
}
