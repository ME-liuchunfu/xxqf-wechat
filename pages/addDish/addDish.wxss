.container {
  padding: 16rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.dish-form {
    display: block;
    width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1px solid #f5f5f5;
  align-items: center;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 200rpx;
  font-size: 32rpx;
  color: #333;
}

.form-input {
  flex: 1;
  height: 60rpx;
  font-size: 32rpx;
  padding: 0 16rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
}

.form-picker {
  flex: 1;
}

.picker-placeholder {
  font-size: 32rpx;
  color: #999;
  padding: 16rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

.upload-container {
  flex: 1;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: rgba(255, 0, 0, 0.8);
  color: white;
  border-radius: 50%;
  padding: 5rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}

.upload-btn icon {
  margin-bottom: 8rpx;
}

.upload-hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
    display: flex;
    justify-content: center;
    align-content: center;
  margin-top: 48rpx;
  width: 100%;
  height: 90rpx;
  line-height: 60rpx;
  background-color: #07c160;
  color: white;
  font-size: 34rpx;
  border-radius: 45rpx;
}

.submit-btn[disabled] {
  background-color: #ccc;
}
