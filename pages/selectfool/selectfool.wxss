/* 全局样式 */
page {
  background-color: #f5f5f5;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 48px;
  background-color: #ffffff;
  border-bottom: 1px solid #eee;
  position: relative;
}

.title {
  font-size: 17px;
  font-weight: 500;
  color: #333;
}

.pocket-btn {
  position: absolute;
  right: 16px;
  display: flex;
  align-items: center;
}

.bag-icon {
  width: 24px;
  height: 24px;
}

.badge {
  position: absolute;
  top: -5px;
  right: -5px;
  width: 18px;
  height: 18px;
  background-color: #ff4d4f;
  color: white;
  border-radius: 50%;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 主内容区 */
.main-content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

/* 左侧分类 */
.category-list {
  width: 100px;
  background-color: #f5f5f5;
  overflow-y: auto;
}

.category-item {
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #666;
  position: relative;
}

.category-item.active {
  background-color: #ffffff;
  color: #ff4d4f;
  font-weight: 500;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 4px;
  height: 100%;
  background-color: #ff4d4f;
}

/* 右侧菜品列表 */
.dish-list {
  flex: 1;
  background-color: #ffffff;
  overflow-y: auto;
  padding: 10px;
}

.dish-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}

.dish-image {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  margin-right: 10px;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: start;
}

.dish-name {
  font-size: 16px;
  color: #333;
  font-weight: 500;
}

.dish-desc {
  font-size: 12px;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 4px;
}

.dish-price {
  font-size: 15px;
  color: #ff4d4f;
  font-weight: 500;
}

.dish-actions {
  display: flex;
  align-items: center;
}

.add-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1px solid #ff4d4f;
  color: #ff4d4f;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  line-height: 55rpx;
  font-weight: bold;
}

.counter {
  display: flex;
  align-items: center;
}

.counter .btn {
  width: 26px;
  height: 26px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
}

.counter .minus {
  border: 1px solid #ddd;
  color: #666;
}

.counter .plus {
  border: 1px solid #ff4d4f;
  color: #ff4d4f;
}

.counter .count {
  margin: 0 8px;
  font-size: 14px;
  color: #333;
}

/* 底部结算栏 */
.footer {
  height: 50px;
  background-color: #ffffff;
  border-top: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
}

.footer-info {
  display: flex;
  flex-direction: column;
}

.selected-count {
  font-size: 12px;
  color: #666;
}

.total-price {
  font-size: 15px;
  color: #ff4d4f;
  font-weight: 500;
}

.checkout-btn {
  width: 100px;
  height: 36px;
  background-color: #ff4d4f;
  color: white;
  border-radius: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  font-weight: 500;
}

/* 口袋侧边栏 */
.pocket-sidebar {
  position: fixed;
  top: 0;
  right: 0;
  width: 80%;
  max-width: 300px;
  height: 100%;
  background-color: #ffffff;
  z-index: 100;
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
}

.pocket-sidebar.show {
  transform: translateX(0);
}

.sidebar-header {
  height: 48px;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.sidebar-title {
  font-size: 17px;
  font-weight: 500;
  color: #333;
}

.close-btn {
  position: absolute;
  right: 16px;
  font-size: 20px;
  color: #666;
}

.sidebar-content {
  flex: 1;
  overflow-y: auto;
  padding: 10px;
}

.pocket-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}

.pocket-item-image {
  width: 60px;
  height: 60px;
  border-radius: 6px;
  margin-right: 10px;
}

.pocket-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pocket-item-name {
  font-size: 14px;
  color: #333;
}

.pocket-item-price {
  font-size: 13px;
  color: #ff4d4f;
}

.empty-pocket {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #999;
}

.empty-icon {
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
}

.empty-text {
  font-size: 14px;
}

.sidebar-footer {
  /* height: 150px; */
  border-top: 1px solid #eee;
  padding: 20rpx 16px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 20rpx;
}

.total-amount {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
}

.total-amount .amount {
  font-size: 18px;
  color: #ff4d4f;
  font-weight: 500;
}

.confirm-btn {
  height: 44px;
  background-color: #ff4d4f;
  color: white;
  border-radius: 22px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: 500;
}

/* 遮罩层 */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: none;
}
.normal-text{
    color: #666666;
}

.overlay.show {
  display: block;
}


.zhou-date{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 24rpx;
}