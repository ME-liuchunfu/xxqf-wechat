.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

/* 列表容器样式 */
.list-container {
  padding: 16rpx;
}

/* 每组数据的容器 */
.list-group {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 日期头部样式 */
.date-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.week {
  font-size: 28rpx;
  color: #666666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 数据项容器 */
.items-container {
  padding: 20rpx 30rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  flex-wrap: wrap;
}

/* 单个数据项样式 */
.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-image {
    padding: 10rpx;
    box-shadow: 0 0 1px #666666;
    border-radius: 10rpx;
    overflow: hidden;
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.item-title {
  font-size: 26rpx;
  color: #333333;
  text-align: center;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 100%;
}

/* 加载提示样式 */
.loading-tip {
  display: flex;
  justify-content: center;
  padding: 30rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 空数据提示样式 */
.empty-tip {
    height: inherit;
    width: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999999;
  font-size: 28rpx;
}
